    "ROI_MARGINS_PAGE_1": { "top": 0, "bottom": 0, "left": 0, "right": 0 },
    "ROI_MARGINS_PAGE_2": { "top": 0, "bottom": 0, "left": 0, "right": 0 },
    "ROI_MARGINS_DEFAULT": { "top": 0, "bottom": 0, "left": 0, "right": 0 },
