{
  "output_dir": "data/output/stage2",
  "debug_dir": "data/debug",
  "verbose": true,
  "save_debug_images": false,
  "deskewing": {
    "enable": true,
    "method": "radon",
    "use_binarization": true,
    "coarse_range": 5,
    "coarse_step": 0.5,
    "fine_range": 1.0,
    "fine_step": 0.2,
    "min_angle_correction": 0.1
  },
  "table_line_detection": {
    "threshold": 50,
    "horizontal_kernel_size": 20,
    "vertical_kernel_size": 50,
    "alignment_threshold": 3,
    "h_min_length_image_ratio": 0.2,
    "h_min_length_relative_ratio": 0.6,
    "v_min_length_image_ratio": 0.4,
    "v_min_length_relative_ratio": 0.5,
    "min_aspect_ratio": 4,
    "max_h_length_ratio": 1.0,
    "max_v_length_ratio": 1.0,
    "close_line_distance": 65,
    "skew_tolerance": 2,
    "skew_angle_step": 0.2
  },
  "inscribed_margin_removal": {
    "inscribed_blur_ksize": 3,
    "inscribed_close_ksize": 15,
    "inscribed_close_iter": 1
  },
  "table_detection": {
    "table_detection_eps": 10,
    "table_detection_kernel_ratio": 0.05,
    "enable_table_cropping": false
  },
  "table_recovery": {
    "coverage_ratio": 0.2
  },
  "vertical_strip_cutting": {
    "enable": true,
    "padding": 20,
    "min_width": 1,
    "use_longest_lines_only": false,
    "min_length_ratio": 0.9
  },
  "binarization": {
    "enable": false,
    "method": "otsu",
    "threshold": 127,
    "adaptive_block_size": 11,
    "adaptive_c": 2,
    "invert": false,
    "denoise": false,
    "stroke_enhancement": {
      "enable": false,
      "kernel_size": 2,
      "iterations": 1,
      "kernel_shape": "ellipse"
    }
  },
  "optimization": {
    "parallel_processing": true,
    "max_workers": null,
    "batch_size": null,
    "memory_mode": false
  }
}