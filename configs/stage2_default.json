{
  "input_dir": "data/output/stage1_initial_processing/05_cropped_tables",
  "output_dir": "data/output/stage2_refinement",
  "debug_dir": "data/debug/stage2_debug",
  "verbose": true,
  "save_debug_images": false,
  "deskewing": {
    "angle_range": 10,
    "angle_step": 0.2,
    "min_angle_correction": 0.2
  },
  "roi_detection": {
    "enable_roi_detection": false
  },
  "roi_margins": {
    "page_1": {
      "top": 0,
      "bottom": 0,
      "left": 0,
      "right": 0
    },
    "page_2": {
      "top": 0,
      "bottom": 0,
      "left": 0,
      "right": 0
    },
    "default": {
      "top": 0,
      "bottom": 0,
      "left": 0,
      "right": 0
    }
  },
  "line_detection": {
    "min_line_length": 50,
    "max_line_gap": 30,
    "hough_threshold": 40,
    "horizontal_kernel_ratio": 30,
    "vertical_kernel_ratio": 20,
    "h_erode_iterations": 1,
    "h_dilate_iterations": 1,
    "v_erode_iterations": 1,
    "v_dilate_iterations": 1,
    "min_table_coverage": 0.2,
    "max_parallel_distance": 10,
    "angle_tolerance": 5.0,
    "h_length_filter_ratio": 0.5,
    "v_length_filter_ratio": 0.4,
