{
  "input_dir": "data/input",
  "output_dir": "data/output/stage1",
  "debug_dir": "data/debug",
  "verbose": true,
  "save_debug_images": false,
  "save_intermediate_outputs": true,
  "mark_removal": {
    "enable": true,
    "dilate_iter": 2,
    "kernel_size": 1,
    "protect_table_lines": false,
    "table_line_thickness": 5,
    "table_detection_params": {
      "threshold": 40,
      "horizontal_kernel_size": 100,
      "vertical_kernel_size": 100
    }
  },
  "tag_removal": {
    "enable": true,
    "thresh_dark": 110,
    "row_sum_thresh": 200,
    "dark_ratio": 0.7,
    "min_area": 2000,
    "max_area": 60000,
    "min_aspect": 0.3,
    "max_aspect": 1.8
  },
  "margin_removal": {
    "enable": true,
    "use_gradient_detection": false,
    "gradient_threshold": 50,
    "blur_ksize": 9,
    "close_ksize": 20,
    "close_iter": 3,
    "erode_after_close": 0
  },
  "page_splitting": {
    "enable": true,
    "search_ratio": 0.3,
    "line_len_frac": 0.3,
    "line_thick": 3,
    "peak_thr": 0.3
  },
  "deskewing": {
    "enable": true,
    "method": "radon",
    "coarse_range": 5,
    "coarse_step": 0.5,
    "fine_range": 2.0,
    "fine_step": 0.1,
    "min_angle_correction": 0.1
  },
  "table_line_detection": {
    "threshold": 120,
    "horizontal_kernel_size": 70,
    "vertical_kernel_size": 70,
    "alignment_threshold": 3,
    "h_min_length_image_ratio": 0.2,
    "h_min_length_relative_ratio": 0.7,
    "v_min_length_image_ratio": 0.2,
    "v_min_length_relative_ratio": 0.3,
    "min_aspect_ratio": 2,
    "max_h_length_ratio": 1.0,
    "max_v_length_ratio": 0.95,
    "close_line_distance": 45,
    "search_region_top": 30,
    "search_region_bottom": 30,
    "search_region_left": 0,
    "search_region_right": 0,
    "skew_tolerance": 3,
    "skew_angle_step": 0.2
  },
  "table_detection": {
    "table_detection_eps": 10,
    "table_detection_kernel_ratio": 0.05,
    "table_crop_padding": 5,
    "enable_table_cropping": true
  },
  "optimization": {
    "parallel_processing": true,
    "max_workers": null,
    "batch_size": 8,
    "memory_mode": true
  }
}