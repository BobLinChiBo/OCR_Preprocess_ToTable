{
  "input_dir": "data/input",
  "output_dir": "data/output/stage1_initial_processing",
  "debug_dir": "data/debug/stage1_debug",
  "verbose": true,
  "save_debug_images": false,
  "page_splitting": {
    "gutter_search_start": 0.4,
    "gutter_search_end": 0.6,
    "min_gutter_width": 50
  },
  "deskewing": {
    "angle_range": 10,
    "angle_step": 0.2,
    "min_angle_correction": 0.2
  },
  "table_line_detection": {
    "threshold": 35,
    "horizontal_kernel_size": 15,
    "vertical_kernel_size": 15,
    "alignment_threshold": 5,
    "pre_merge_length_ratio": 0.2,
    "post_merge_length_ratio": 0.3,
    "min_aspect_ratio": 3
  },
  "margin_removal": {
    "enable_margin_removal": true,
    "blur_kernel_size": 9,
    "black_threshold": 45,
    "content_threshold": 180,
    "morph_kernel_size": 30,
    "min_content_area_ratio": 0.1,
    "margin_padding": 10
  }
}