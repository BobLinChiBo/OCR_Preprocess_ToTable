{
  "input_dir": "data/input",
  "output_dir": "data/output/stage1_initial_processing",
  "debug_dir": "data/debug/stage1_debug",
  "verbose": true,
  "save_debug_images": false,
  "page_splitting": {
    "search_ratio": 0.3,
    "blur_k": 21,
    "open_k": 9,
    "width_min": 20
  },
  "deskewing": {
    "angle_range": 5,
    "angle_step": 0.2,
    "min_angle_correction": 0.2
  },
  "table_line_detection": {
    "threshold": 35,
    "horizontal_kernel_size": 10,
    "vertical_kernel_size": 10,
    "alignment_threshold": 3,
    "pre_merge_length_ratio": 0.3,
    "post_merge_length_ratio": 0.5,
    "min_aspect_ratio": 3,
    "max_h_length_ratio": 1.0,
    "max_v_length_ratio": 1.0,
    "close_line_distance": 45
  },
  "margin_removal": {
    "enable_margin_removal": true,
    "blur_kernel_size": 9,
    "black_threshold": 45,
    "content_threshold": 180,
    "morph_kernel_size": 30,
    "min_content_area_ratio": 0.1,
    "margin_padding": 10
  },
  "inscribed_margin_removal": {
    "inscribed_blur_ksize": 7,
    "inscribed_close_ksize": 30,
    "inscribed_close_iter": 3
  },
  "table_detection": {
    "table_detection_eps": 10,
    "table_detection_kernel_ratio": 0.05,
    "table_crop_padding": 20,
    "enable_table_border_cropping": true
  }
}